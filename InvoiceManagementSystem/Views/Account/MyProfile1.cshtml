    });
    $(function () {
        $(".wt-tabs").tabs({
            active: false
        });
    });


    function ShowFilter(type) {
        debugger
        if (type == 1) {
            $('#Profile').show();
            $('#Setting').hide();
            type = 2;
        }
        else {
            $('#Setting').show();
            $('#Profile').hide();
            type = 1;
        }
    }
</script>
