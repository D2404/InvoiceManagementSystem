            Id: Id
        }
        ShowWait();
        $.ajax({
            url: '/ClassRoom/UpdateStatus',
            contentType: "application/json; charset=utf-8",
            type: "POST",
            data: JSON.stringify({
                cls: cls
            }),
            success: function (data) {
                if (data == 'success') {
                    toastr.success('status updated successfully.');
                    document.getElementById('hdnintId').value = "0";
                    GetClassRoomList(1);
                    $('#status').click();
                }
                else if (data == 'Exist') {
                    toastr.error('Exists');
                }
                else {
                    alert('error');
                }
                HideWait();
            },
            error: function (xhr) {
                HideWait();
